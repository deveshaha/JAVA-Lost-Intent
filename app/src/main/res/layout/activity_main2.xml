<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/teal_200"
    android:padding="@dimen/global_padding"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/tv_act2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvAct2"
        android:textSize="@dimen/login_txtSize">
    </TextView>

    <Button
        android:id="@+id/btn_corto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_ajatoC"
        android:layout_alignParentBottom="true">
    </Button>

    <Button
        android:id="@+id/btn_largo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_ajatoL"
        android:layout_above="@+id/btn_corto">
    </Button>

</RelativeLayout>